int co	Number of columns
int li	Number of lines
str so	Start standout mode
str se	End standout mode
str ti	Begin program that uses cursor motion
str cl	Clear screen and cursor home
str cm	Cursor move to row %1 and column %2 (on screen)
str ve	Normal cursor visible
str sc	Save cursor position
str vi	Cursor invisible
str ho	Cursor home
str hd	Move cursor a half line down
str do	Cursor down one line
str kd  Cursor down key
str kl  Cursor left key
str kr  Cursor right key
str ku  Cursor up key
str us	Start underlining
str te	End program that uses cursor motion
str ti	Begin program that uses cursor motion
str me	End all mode like so, us, mb, md, and mr
str cd	Clear to end of screen
str mr	Start reverse mode
bool ms Cursor movement works in standout/underline mode

TERMIOS
tcflag_t
	c_iflag	- input modes
	c_oflag - output modes
	c_cflag	- control modes
	c_lflag - local modes
cc_t
	c_cc[NCCS] - control characters